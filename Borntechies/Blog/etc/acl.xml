<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Borntechies_Blog::blog" title="Borntechies Better Blog" sortOrder="25">
                        <resource id="Borntechies_Blog::post" title="Posts" sortOrder="10"/>
                        <resource id="Borntechies_Blog::tag" title="Tags" sortOrder="20"/>
                        <resource id="Borntechies_Blog::topic" title="Topics" sortOrder="30"/>
                        <resource id="Borntechies_Blog::category" title="Categories" sortOrder="40"/>
                        <resource id="Borntechies_Blog::author" title="Author Information" sortOrder="50"/>
                        <resource id="Borntechies_Blog::comment" title="Manage Comments" sortOrder="60"/>
                        <resource id="Borntechies_Blog::import" title="Import" sortOrder="65"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Borntechies_Blog::configuration" title="Borntechies Better Blog"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
