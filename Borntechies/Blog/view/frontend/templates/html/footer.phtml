use Borntechies\Blog\Block\Html\Footer;

/** @var Footer $block */
$helper = $block->getHelperData();
?>
<?php if ($helper->isEnabled()) : ?>
    <?php if ($helper->getBlogConfig('general/footer')) : ?>
        <li>
            <a <?= /** @noEscape */ $block->getLinkAttributes() ?>>
                <?= $block->escapeHtml($block->getLabel()); ?>
                <?= ($block->getCounter()) ? '<span>' . $block->escapeHtml($block->getCounter()) . '</span>' : ''; ?>
            </a>
        </li>
    <?php endif; ?>
    <?php if ($helper->getBlogConfig('general/display_sitemap')) : ?>
        <li>
            <a href="<?= $block->getHtmlSiteMapUrl() ?>">
                <?= $block->escapeHtml(__('Sitemap')) ?>
                <?= ($block->getCounter()) ? '<span>' . $block->escapeHtml($block->getCounter()) . '</span>' : ''; ?>
            </a>
        </li>
    <?php endif; ?>
<?php endif; ?>
